{% set money = 0 %}
 {% for yundan in list %}
    <tr>
        <td>
            <input name="ids" type="checkbox" value="{{ yundan.id }}"/>
        </td>
        <td>
            {{ yundan.awbno }}
        </td>
        <td>
            {{ yundan.lastUpdated|date('Y-m-d') }}
        </td>
        <td>
            {{ yundan.xianlu }}
        </td>
        <td>
            {{ yundan.xianfu }}
        </td>
        <td>
            {% if yundan.xianfushouyin %} 已收银
            {% else %}  未收银{% set money = money + yundan.xianfu %}
            {% endif %}
        </td>
        <td>
            {{ yundan.datexianfushouyin|date('Y-m-d') }}

        </td>
    </tr>
{% endfor %}

<script>
    $(function() {
        $("#zongji").text("总计欠费: "+ {{ money }});
    })
</script>

